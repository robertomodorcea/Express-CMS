<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="container col-xxl-8 px-4 py-5">
            <a href="/articles/new" class="btn btn-success mt-4">Create New Article</a>
            <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
              <div class="col-10 col-sm-8 col-lg-6">
                <img src="<%= articles[0].image %>" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
              </div>
              <div class="col-lg-6">
                <h1 class="display-5 fw-bold lh-1 mb-3"><%= articles[0].title%></h1>
                <p class="lead"><%= articles[0].description %></p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                  <a href="articles/<%= articles[0].id %> " class="btn btn-primary btn-lg px-4 me-md-2">Open</a>
                  <form action="/articles/<%= articles[0].id%>?_method=DELETE" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg px-4 me-md-2">Delete</button>
                  </form> 
                </div>
              </div>
            </div>
          </div>
          <div class="container px-4 py-5" id="custom-cards">
            <h2 class="pb-2 border-bottom">Custom cards</h2>
            <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
                <% articles.forEach(element => { %>
                    <div class="col">
                        <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url(<%=element.image%>); background-size: cover;">
                          <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                            <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold"><%= element.title %></h3>
                            <ul class="d-flex list-unstyled mt-auto">
                              <li class="me-auto">
                                <small><%= element.date.toLocaleDateString()  %> </small>
                              </li>
                              <li class="d-flex align-items-center me-3">
                                <a href="articles/<%= element.id  %> " class="btn btn-primary">Show</a>
                              </li>
                              <li class="d-flex align-items-center">
                                <form action="/articles/<%= element.id%>?_method=DELETE" method="post" class="d-inline">
                                  <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                              </li>
                            </ul>
                          </div>
                        </div>
                      </div>
                <%}); %>
            </div>
          </div>
    </div>
</body>
</html>